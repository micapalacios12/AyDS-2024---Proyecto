<h1>Login</h1>
<form method="POST" action="/login">
  <label>Email:</label>
  <input type="email" name="email" required>
  <label>Password:</label>
  <input type="password" name="password" required>
  <button type="submit">Login</button>
</form>
<% if locals[:message] %>
  <p><%= locals[:message] %></p>
<% end %>

